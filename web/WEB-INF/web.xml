<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Reporte</servlet-name>
        <servlet-class>controlador.Reporte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistrarEmpleado</servlet-name>
        <servlet-class>controlador.ServletRegistrarEmpleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistrarActividad</servlet-name>
        <servlet-class>controlador.ServletRegistrarActividad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAnadirCarrito</servlet-name>
        <servlet-class>controlador.ServletAnadirCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletActualizarEmpleado</servlet-name>
        <servlet-class>controlador.ServletActualizarEmpleado</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Reporte</servlet-name>
        <url-pattern>/Reporte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistrarEmpleado</servlet-name>
        <url-pattern>/ServletRegistrarEmpleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistrarActividad</servlet-name>
        <url-pattern>/ServletRegistrarActividad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAnadirCarrito</servlet-name>
        <url-pattern>/ServletAnadirCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletActualizarEmpleado</servlet-name>
        <url-pattern>/ServletActualizarEmpleado</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
